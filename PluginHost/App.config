<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <configSections>
    <!-- Defines the section group for the custom configuration class -->
    <section name="pluginHost"
             type="PluginHost.Configuration.Config, PluginHost"
             allowLocation="true"
             allowDefinition="Everywhere" />
  </configSections>
  <pluginHost>
    <paths>
      <plugins location="Plugins" />
      <localStorage location="Storage" />
    </paths>
  </pluginHost>
</configuration>